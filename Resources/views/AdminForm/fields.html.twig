{% block form_row %}
<div class="formRow">
    <div class="grid2">{{ form_label(form) }}</div>
    <div class="grid10">
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
    <div class="clear"></div>
</div>
{% endblock %}

{% block double_box_widget %}
<script language="javascript" type="text/javascript">
        $(function() {
        $.configureBoxes({
            useFilters: true,
            useCounters: true,
            box1View: '{{ id }}1View',
            box1Storage: '{{ id }}1Storage',
            box1Filter: '{{ id }}1Filter',
            box1Clear: '{{ id }}1Clear',
            box1Counter: '{{ id }}1Counter',
            box2View: '{{ id }}2View',
            box2Storage: '{{ id }}2Storage',
            box2Filter: '{{ id }}2Filter',
            box2Clear: '{{ id }}2Clear',
            box2Counter: '{{ id }}2Counter',
            to1: 'to{{ id }}1',
            to2: 'to{{ id }}2',
            allTo1: 'allTo{{ id }}1',
            allTo2: 'allTo{{ id }}2'
        });
    });
</script>
    {% spaceless %}
<div class="leftBox">
    <input type="text" id="{{ id }}1Filter" class="boxFilter" placeholder="{% trans from "form"%}admin.admin.double_box.input.placeholder{% endtrans %}" />
        <button type="button" id="{{ id }}1Clear" class="dualBtn fltr">x</button><br />

    <select id="{{ id }}1View" multiple="multiple" class="multiple" style="height:300px;">
        {% if empty_value is not none %}
            <option value="">{{ empty_value|trans({}, "form") }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
                {{ block('left_box_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('left_box_widget_options') }}
    </select>
    <br/>
    <span id="{{ id }}1Counter" class="countLabel"></span>
    <div class="displayNone"><select id="{{ id }}1Storage"></select></div>
</div>
<div class="dualControl">
    <button id="to{{ id }}2" type="button" class="dualBtn mr5 mb15">&nbsp;&gt;&nbsp;</button>
    <button id="allTo{{ id }}2" type="button" class="dualBtn">&nbsp;&gt;&gt;&nbsp;</button><br />
    <button id="to{{ id }}1" type="button" class="dualBtn mr5">&nbsp;&lt;&nbsp;</button>
    <button id="allTo{{ id }}1" type="button" class="dualBtn">&nbsp;&lt;&lt;&nbsp;</button>
</div>
<div class="rightBox">
    <input type="text" id="{{ id }}2Filter" class="boxFilter" placeholder="{% trans from "form"%}admin.admin.double_box.input.placeholder{% endtrans %}" />
        <button type="button" id="{{ id }}2Clear" class="dualBtn fltr">x</button><br />
    <select id="{{ id }}2View" name="{{ full_name }}" multiple="multiple" class="multiple" style="height:300px;">
        {% if empty_value is not none %}
            <option value="">{{ empty_value|trans({}, "form") }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
                {{ block('right_box_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('right_box_widget_options') }}
    </select><br/>
    <span id="{{ id }}2Counter" class="countLabel"></span>
    <div class="displayNone"><select id="{{ id }}2Storage"></select></div>
</div>
    {% endspaceless %}
{% endblock %}

{% block left_box_widget_options %}
    {% spaceless %}
        {% for group_label, choice in options %}
            {% if choice is iterable %}
                <optgroup label="{{ group_label|trans({}, "form") }}">
                    {% set options = choice %}
                    {{ block('left_box_widget_options') }}
                </optgroup>
            {% else %}
                {% if choice is not selectedchoice(value) %}<option value="{{ choice.value }}" >{{ choice.label|trans({}, "form") }}</option>{% endif %}
            {% endif %}
        {% endfor %}
    {% endspaceless %}
{% endblock left_box_widget_options %}

{% block right_box_widget_options %}
    {% spaceless %}
        {% for group_label, choice in options %}
            {% if choice is iterable %}
                <optgroup label="{{ group_label|trans({}, "form") }}">
                    {% set options = choice %}
                    {{ block('right_box_widget_options') }}
                </optgroup>
            {% else %}
                {% if choice is selectedchoice(value) %}<option value="{{ choice.value }}" >{{ choice.label|trans({}, "form") }}</option>{% endif %}
            {% endif %}
        {% endfor %}
    {% endspaceless %}
{% endblock right_box_widget_options %}

{% block document_double_box_widget %}
    {{ block('double_box_widget') }}
{% endblock %}

{% block entity_double_box_widget %}
    {{ block('double_box_widget') }}
{% endblock %}

{% block choice_widget_options %}
    {% spaceless %}
        {% for group_label, choice in options %}
            {% if choice is iterable %}
                <optgroup label="{{ group_label|trans({}, "form") }}">
                    {% set options = choice %}
                    {{ block('choice_widget_options') }}
                </optgroup>
            {% else %}
                {% if multiple and choice.value != "other" or not multiple %}
                    <option value="{{ choice.value }}"{% if choice is selectedchoice(value) %} selected="selected"{% endif %}>{{ choice.label|trans({}, "form") }}</option>
                {% endif %}
            {% endif %}
        {% endfor %}
    {% endspaceless %}
{% endblock choice_widget_options %}

{% block choice_widget_collapsed %}
    {% spaceless %}
        <select {{ block('widget_attributes') }}{% if multiple %} class="multiple" multiple="multiple"{% endif %}>
            {% if empty_value is not none %}
                <option value="">{{ empty_value|trans({}, "form") }}</option>
            {% endif %}
            {% if preferred_choices|length > 0 %}
                {% set options = preferred_choices %}
                {{ block('choice_widget_options') }}
                {% if choices|length > 0 and separator is not none %}
                    <option disabled="disabled">{{ separator }}</option>
                {% endif %}
            {% endif %}
            {% set options = choices %}
            {{ block('choice_widget_options') }}
        </select>
    {% endspaceless %}
{% endblock choice_widget_collapsed %}

{% block checkbox_widget %}
    {% spaceless %}
        <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} class="check" />
    {% endspaceless %}
{% endblock checkbox_widget %}

{% block form_label %}
    {% spaceless %}
        {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
        {% endif %}

        {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {% endif %}

        {% if label is empty %}
        {% set label = name|humanize %}
        {% endif %}

        <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
            {{ label|trans({}, "form") }}{% if required %}<span class="req">*</span>{%endif %}
        </label>
    {% endspaceless %}
{% endblock form_label %}

{% block textarea_widget %}
    {% spaceless %}
        <textarea {{ block('widget_attributes') }} rows="10">{{ value }}</textarea>
    {% endspaceless %}
{% endblock textarea_widget %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="nNote nFailure">
            <ul>
                {% for error in errors %}
                    <li>{{
                    error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
                    }}</li>
                {% endfor %}
            </ul>
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block collection_widget %}
    {% spaceless %}
        <div class="collection">
            {% if prototype is defined %}
                {% set attr = attr|merge({'data-prototype': block('collection_item_widget') }) %}
            {% endif %}
            <div {{ block('widget_container_attributes') }}>
                {{ form_errors(form) }}

                {% for rows in form %}
                <div class="formRow">
                    {% set fieldNum = 1 %}
                    {% for row in rows %}
                        <div class="formRow field{{ fieldNum }} {% if loop.last %}noBorderB{% endif %}">
                            <div class="grid3">{{ form_label(row) }}</div>
                            <div class="grid9">{{ form_widget(row) }}</div>
                            <div class="clear"></div>
                        </div>
                        {% set fieldNum = fieldNum + 1 %}
                    {% else %}
                        <div class="formRow field{{ fieldNum }} noBorderB">
                            <div class="grid3">{{ form_label(rows) }}</div>
                            <div class="grid9">{{ form_widget(rows) }}</div>
                            <div class="clear"></div>
                        </div>
                    {% endfor %}
                </div>
                {% endfor %}

                {{ form_rest(form) }}
            </div>
            <div class="clear"></div>

            {% for attrname, attrvalue in attr %}
                {% if 'add' == attrname %}
                    <a href="#" id="{{ attrvalue }}" title="{% trans from "views" %}admin.admin.fields.add.title{% endtrans %}" class="add buttonS bBlue mt10">{% trans from "views" %}admin.admin.fields.add.text{% endtrans %}</a>
                {% endif %}
            {% endfor %}

        </div>
        <div class="clear"></div>
    {% endspaceless %}
{% endblock collection_widget %}

{% block collection_item_widget %}
    {% spaceless %}
        {% set fieldNum = 1 %}
        {% for row in prototype %}
            <div class="formRow field{{ fieldNum }} {% if loop.last %}noBorderB{% endif %}">
                <div class="grid3">{{ form_label(row) }}</div>
                <div class="grid9">{{ form_widget(row) }}</div>
                <div class="clear"></div>
            </div>
            {% set fieldNum = fieldNum + 1 %}
        {% else %}
            <div class="formRow noBorderB">
                <div class="grid3">{{ form_label(prototype) }}</div>
                <div class="grid9">{{ form_widget(prototype) }}</div>
                <div class="clear"></div>
            </div>
        {% endfor %}
    {% endspaceless %}
{% endblock collection_item_widget %}
